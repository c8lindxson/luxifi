<div class="container">
  <h1>Request an Item</h1>
  <%= simple_form_for [@item, @booking] do |f| %>
    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, html5: true %>
    <%= f.input :comment, placeholder: "Optional: Requests or notes can go here..." %>
    <%= f.submit %>
  <% end %>
</div>
