<div class="container mb-4">
  <div class="row">
    <div class="col-sm-4">
      <div class="m-2">
        <%= link_to items_path, class: "back-button" do %>
          <i class="fa-solid fa-arrow-left"></i> BACK
        <% end %>
      </div>
      <%# <div class="img-fluid img-thumbnail"> %>
      <% if @item.photo.attached? %>
        <%= cl_image_tag @item.photo.key, class: "img-fluid img-thumbnail"%>
      <% else %>
        <%= image_tag @item.image_url, class: "img-fluid img-thumbnail"%>
      <% end %>
      <%# </div> %>
    </div>
    <div class="col-sm-8 d-flex justify-content-center align-items-center">
      <div class="col-md-8 mt-6">
        <h3 ><%= @item.name %></h3>
        <p class="mt-3">Brand: <%= @item.brand %></p>
        <p>Price: $<%= @item.price %> / day</p>
        <p>Detail: <%= @item.comment %> </p>
        <%= link_to "Request item", new_item_booking_path(@item), class: "button mt-1" %>
      </div>
    </div>
  </div>
</div>
</div>
