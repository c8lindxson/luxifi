<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= @item.image_url %>" alt="<%= @item.name %> Image" class="img-fluid">
    </div>
    <div class="col-md-6">
      <h1><%= @item.name %></h1>
      <p class="mb-4">Brand: <%= @item.brand %></p>
      <h4>Price: $<%= @item.price %></h4>
    </div>
  </div>
</div>
