<div>
  <h2 class="header">NEW IN</h2>
</div>
<div class="container">
  <div class="cards">
    <% @items.each do |item| %>
      <div class="item-card">
        <img src="<%= item.image_url %>">
        <div class="card-info">
          <div>
            <h2> <%= item.brand %> </h2>
            <p> <%= item.name  %></p>
            <div>
              <h2> $<%= item.price %> </h2>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
