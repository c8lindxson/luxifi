<div class="container mb-5">
  <div class="m-2">
    <%= link_to bookings_path, class: "back-button" do %>
      <i class="fa-solid fa-arrow-left"></i> NEW IN
    <% end %>
  </div>
  <div class="empty-div-navbar-fix mt-5">
    <h1>Add item </h1>
    <%= simple_form_for [@item] do |f| %>
      <div class="d-flex ">
        <div class="col-6">
          <%= f.input :brand, placeholder: "Brand..." %>
          <%= f.input :name, placeholder: "Item name..." %>
          <%= f.input :price, as:"text", placeholder: "Price..." %>
          <%= f.input :comment, placeholder: "Details..." %>
          <%= f.input :tag, placeholder: "Color, size, etc.." %>
          <%# <%= f.input :photo, as: :file %>
          <div class="d-flex justify-content-between">
            <%= f.input :category, collection: Item::CATEGORY, prompt: 'Choose a category' %>
            <%= f.input :gender, collection: ['Womens', 'Mens', 'Neutral'], prompt: 'Choose a gender' %>
          </div>
          <%= f.submit value:"Submit", class:"button" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
